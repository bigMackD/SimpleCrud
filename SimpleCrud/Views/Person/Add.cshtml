@model SimpleCrud.Models.AddUserModel

@using (Html.BeginForm())
{
<div class="form-group">
    <label for="FirstName">Name</label>
    @Html.EditorFor(x => x.FirstName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.FirstName)
</div>

    <div class="form-group">
        <label for="LastName">Last name</label>
        @Html.EditorFor(x => x.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.LastName)
    </div>

    <div class="form-group">
        <label for="DateOfBirth">Date of birth</label>
        @Html.EditorFor(x => x.DateOfBirth, new { @class = "form-control" })
    </div>

    @Html.ValidationSummary()

    <input type="submit" class="breadcrumb" value="Save"/>
}