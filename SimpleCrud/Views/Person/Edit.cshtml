@model SimpleCrud.Models.EditUserModel

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Id);

    <div class="form-group">
        <label for="FirstName">Name</label>
        @Html.EditorFor(x => x.FirstName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="LastName">Last name</label>
        @Html.EditorFor(x => x.LastName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="IsActive">Is active?</label>
        @Html.EditorFor(x => x.IsActive, new { @class = "form-control" })
    </div>

    <input type="submit" class="breadcrumb" value="Save " />
}